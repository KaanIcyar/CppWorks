#include <iostream>
using namespace std;

void changeNumbers(int* nmr1, int* nmr2) {
    int temp;
    temp = *nmr1;
    *nmr1 = *nmr2;
    *nmr2 = temp;
}

int main()
{
    int* ptr1, * ptr2;
    int number1 = 10, number2 = 20;
    ptr1 = &number1;
    ptr2 = &number2;

    cout << "Sayi 1 :" << number1 << "  Sayi 2 :" << number2 << endl;
    changeNumbers(&number1, &number2);
    cout << "Sayi 1 :" << number1 << "  Sayi 2 :" << number2 << endl;

}

