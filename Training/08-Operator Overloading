#include<iostream>
using namespace std;


class Complex {
private:
    int real;
    int imaginary;

public:
    Complex(){}

    Complex(int r, int i) {
        real = r;
        imaginary = i;

    }

    void print() {
        if (imaginary > 0)
            cout << real << " + " << imaginary << "i";
        else if (imaginary < 0)
            cout << real << imaginary << "i";
        else
            cout << real;
    }

    Complex operator+ (Complex s2) {
        Complex toplam;
        toplam.real = real + s2.real;
        toplam.imaginary = imaginary + s2.imaginary;
        return toplam;
    }

};

int main() {

    Complex c1(3,2);
    Complex c2(1, -4);
    Complex c3 = c1 + c2;

    c3.print();



    return 0;
}
