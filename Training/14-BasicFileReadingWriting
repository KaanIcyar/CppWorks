
//WRITING

#include <iostream>
# include <fstream>                                                                                 // we must include that for file operations.
using namespace std;

int main()
{
    ofstream file("C:\\Users\\kaani\\OneDrive\\Masa端st端\\Students.txt", std::ios_base::app);        // if we dont use std::ios_base::app it delete all the file and 
                                                                                                    //then it starts write .
    int number[3];
    string name[3];
    int year[3];

    for (int i = 0; i < 3; i++) {
        cout << "Number : ";
        cin >> number[i];
        cout << "Name : ";
        cin >> name[i];
        cout << "Year : ";
        cin >> year[i];

    }

    file << "Student List : " << endl;

    for (int i = 0; i < 3; i++) {
        file << number[i] << " " << name[i] << " " << year[i] << endl;
    }

}

